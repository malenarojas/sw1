<div class="container p-4">
    <div class="row mb-5 mt-2">
        <div class="col-2">
            <a href="/projects/show/{{project.id}}" class="btn btn-warning col m-2 text-light">Volver</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/projects/edit/{{project.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{project.title}}" class="form-control" name="title"
                                placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save Title
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{#if isOwned}}
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/projects/addmember/{{project.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="username" placeholder="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block">
                                Add Member
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <input type="text" class="form-control" value="{{project.id}}" name="prjId" hidden>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Username</th>
                                <th scope="col">Remover</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each members}}
                            <tr>
                                <td>{{member}}</td>
                                <td>
                                    <form action="/projects/deletemember/{{id}}" method="POST">
                                        <div class="form-group">
                                            <button class="btn btn-danger btn-sm">
                                                X
                                            </button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</div>